{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "paths": {
        "@codeweaver/core": ["./packages/core/src/index.ts"],
        "@codeweaver/core/*": ["./packages/core/src/*"]
      }
    }
  }