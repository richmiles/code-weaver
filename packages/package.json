{
    "name": "codeweaver",
    "private": true,
    "version": "0.0.1",
    "description": "Code Weaver - VS Code and Browser Extension with MCP integration",
    "workspaces": [
      "packages/*"
    ],
    "scripts": {
      "build": "nx run-many --target=build --all",
      "test": "nx run-many --target=test --all",
      "dev": "nx run-many --target=dev --all",
      "lint": "nx run-many --target=lint --all",
      "clean": "nx run-many --target=clean --all"
    },
    "devDependencies": {
      "@nrwl/nx-cloud": "latest",
      "@nx/js": "latest",
      "nx": "latest",
      "typescript": "^5.0.0"
    },
    "engines": {
      "node": ">=16.0.0"
    }
  }